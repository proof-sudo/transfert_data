<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_external_odoo" model="ir.ui.view">
        <field name="name">res.config.settings.external.odoo.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group string="Odoo Externe">
                    <field name="external_odoo_base_url" placeholder="https://mon-odoo-externe.com"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
