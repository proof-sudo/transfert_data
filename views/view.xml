<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Formulaire configuration -->
    <record id="view_transfer_to_odoo_config_form" model="ir.ui.view">
        <field name="name">transfer_to_odoo17.config.form</field>
        <field name="model">transfer_to_odoo17.config</field>
        <field name="arch" type="xml">
            <form string="Configuration Odoo Externe">
                <sheet>
                    <group>
                        <field name="external_odoo_base_url"/>
                    </group>
                    <footer>
                        <button string="Sauvegarder" type="object" name="write" class="btn-primary"/>
                        <button string="Fermer" class="btn-default" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action pour ouvrir le formulaire -->
    <record id="action_transfer_to_odoo_config" model="ir.actions.act_window">
        <field name="name">Configuration Odoo Externe</field>
        <field name="res_model">transfer_to_odoo17.config</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

    <!-- Menu principal -->
    <menuitem id="menu_transfer_to_odoo_root" name="Transfert Odoo"/>

    <!-- Menu enfant -->
    <menuitem id="menu_transfer_to_odoo_config"
              name="Configuration Odoo Externe"
              parent="menu_transfer_to_odoo_root"
              action="action_transfer_to_odoo_config"/>
</odoo>
